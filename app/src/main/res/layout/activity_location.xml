<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hey.weather.Location">

    <Spinner
        android:id="@+id/province_location"
        android:layout_width="100pt"
        android:layout_height="20pt"
        android:layout_marginTop="20dip"
        android:layout_centerHorizontal="true"></Spinner>

    <Spinner
        android:id="@+id/city_location"
        android:layout_width="100pt"
        android:layout_height="20pt"
        android:layout_below="@+id/province_location"
        android:layout_marginTop="20dip"
        android:layout_centerHorizontal="true"></Spinner>

    <Spinner
        android:id="@+id/county_location"
        android:layout_width="100pt"
        android:layout_height="20pt"
        android:layout_below="@+id/city_location"
        android:layout_marginTop="20dip"
        android:layout_centerHorizontal="true"></Spinner>

    <Button
        android:id="@+id/ok_location"
        android:layout_width="60pt"
        android:layout_height="20pt"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="ok"/>
</RelativeLayout>
