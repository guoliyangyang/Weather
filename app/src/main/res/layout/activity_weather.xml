<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hey.weather.Weather">

    <TextView
        android:id="@+id/city_weather"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="10dip"
        android:textAlignment="center"
        android:textSize="17sp"
        android:text="City"/>
    <TextView
        android:id="@+id/cityname_weather"
        android:layout_width="80pt"
        android:layout_height="20pt"
        android:layout_toRightOf="@+id/city_weather"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="40dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/min_temp"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_below="@+id/city_weather"
        android:text="Min temp"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="10dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/min_temperature"
        android:layout_width="80pt"
        android:layout_height="20pt"
        android:layout_below="@+id/city_weather"
        android:layout_toRightOf="@+id/min_temp"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="40dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/max_temp"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_below="@+id/min_temp"
        android:text="Max temp"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="10dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/max_temperature"
        android:layout_width="80pt"
        android:layout_height="20pt"
        android:layout_below="@+id/min_temperature"
        android:layout_toRightOf="@+id/max_temp"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="40dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/wea_weather"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_below="@id/max_temp"
        android:text="Weather"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="10dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/weather_weather"
        android:layout_width="80pt"
        android:layout_height="20pt"
        android:layout_below="@id/max_temperature"
        android:layout_toRightOf="@+id/wea_weather"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="40dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/post_t"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_below="@id/wea_weather"
        android:text="Post time"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="10dip"
        android:textAlignment="center"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/post_time"
        android:layout_width="80pt"
        android:layout_height="20pt"
        android:layout_below="@+id/weather_weather"
        android:layout_toRightOf="@+id/post_t"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="40dip"
        android:textAlignment="center"
        android:textSize="17sp"/>


    <Button
        android:id="@+id/rechoose_weather"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="65dip"
        android:text="Rechoose"/>
    <Button
        android:id="@+id/back_weather"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/rechoose_weather"
        android:text="Back"/>

</RelativeLayout>
