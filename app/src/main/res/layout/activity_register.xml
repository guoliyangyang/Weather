<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hey.weather.Register">

    <TextView
        android:id="@+id/user_register"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_marginTop="30dip"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="User"/>
    <TextView
        android:id="@+id/password_register"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_below="@+id/user_register"
        android:layout_marginTop="15dip"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Password"/>
    <TextView
        android:id="@+id/email_register"
        android:layout_width="50pt"
        android:layout_height="20pt"
        android:layout_below="@+id/password_register"
        android:layout_marginTop="15dip"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="E-mail"/>

    <EditText
        android:id="@+id/userin_register"
        android:layout_width="100pt"
        android:layout_height="20pt"
        android:layout_toRightOf="@+id/user_register"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"/>
    <EditText
        android:id="@+id/passwordin_register"
        android:layout_width="100pt"
        android:layout_height="20pt"
        android:layout_toRightOf="@+id/password_register"
        android:layout_marginLeft="10dip"
        android:layout_below="@+id/userin_register"
        android:layout_marginTop="15dip"/>
    <EditText
        android:id="@+id/emailin_register"
        android:layout_width="100pt"
        android:layout_height="20pt"
        android:layout_below="@+id/passwordin_register"
        android:layout_toRightOf="@+id/email_register"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"/>

    <Button
        android:id="@+id/register_register"
        android:layout_width="60pt"
        android:layout_height="20pt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dip"
        android:text="Register"/>
    <Button
        android:id="@+id/back_register"
        android:layout_width="60pt"
        android:layout_height="20pt"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/register_register"
        android:text="Back"/>

</RelativeLayout>
